{
  "name": "voidterm",
  "version": "1.0.2",
  "description": "A modern, cross-platform terminal emulator",
  "author": {
    "name": "bqrayvzdgn",
    "email": "bqrayvzdgn@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bqrayvzdgn/VoidTerm"
  },
  "homepage": "https://github.com/bqrayvzdgn/VoidTerm",
  "bugs": {
    "url": "https://github.com/bqrayvzdgn/VoidTerm/issues"
  },
  "keywords": [
    "terminal",
    "emulator",
    "electron",
    "xterm",
    "cross-platform"
  ],
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "npm run build:electron && wait-on http://localhost:5173 && node scripts/launch-electron.js",
    "build": "npm run build:electron && vite build && electron-builder",
    "build:electron": "npx tsc -p electron/tsconfig.json",
    "build:win": "npm run build -- --win",
    "build:mac": "npm run build -- --mac",
    "build:linux": "npm run build -- --linux",
"lint": "eslint src/ electron/",
    "lint:fix": "eslint src/ electron/ --fix",
    "format": "prettier --write \"src/**/*.{ts,tsx,css}\" \"electron/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,css}\" \"electron/**/*.ts\"",
    "typecheck": "tsc --noEmit && tsc -p electron/tsconfig.json --noEmit",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@xterm/addon-clipboard": "^0.2.0",
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-image": "^0.9.0",
    "@xterm/addon-ligatures": "^0.10.0",
    "@xterm/addon-search": "^0.16.0",
    "@xterm/addon-serialize": "^0.14.0",
    "@xterm/addon-web-links": "^0.12.0",
    "@xterm/addon-webgl": "^0.19.0",
    "@xterm/xterm": "^6.0.0",
    "electron-log": "^5.4.3",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.7.3",
    "node-pty": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.1",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@eslint/js": "^9.0.0",
"@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.7",
    "@vitejs/plugin-react": "^4.2.0",
"concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1",
    "eslint": "^9.0.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^5.0.0",
"prettier": "^3.2.0",
    "typescript": "^5.3.0",
    "typescript-eslint": "^8.0.0",
    "vite": "^5.0.0",
"wait-on": "^7.2.0"
  },
  "prettier": {
    "semi": false,
    "singleQuote": true,
    "trailingComma": "none",
    "printWidth": 120,
    "tabWidth": 2,
    "endOfLine": "auto",
    "arrowParens": "always",
    "bracketSpacing": true,
    "jsxSingleQuote": false
  },
  "build": {
    "appId": "com.voidterm.app",
    "productName": "VoidTerm",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "bqrayvzdgn",
      "repo": "VoidTerm"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icons/icon.ico",
      "publisherName": "bqrayvzdgn",
      "signAndEditExecutable": false
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icons/icon.icns"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icons"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "VoidTerm-Setup.${ext}",
      "uninstallDisplayName": "VoidTerm"
    }
  }
}
