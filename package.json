{
  "name": "voidterm",
  "version": "1.2.0",
  "description": "A modern, cross-platform terminal emulator",
  "author": {
    "name": "bqrayvzdgn",
    "email": "bqrayvzdgn@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bqrayvzdgn/VoidTerm"
  },
  "homepage": "https://github.com/bqrayvzdgn/VoidTerm",
  "bugs": {
    "url": "https://github.com/bqrayvzdgn/VoidTerm/issues"
  },
  "keywords": [
    "terminal",
    "emulator",
    "electron",
    "xterm",
    "cross-platform"
  ],
  "main": "dist/electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "npm run build:electron && wait-on http://localhost:5173 && node scripts/launch-electron.js",
    "build": "npm run build:electron && vite build && electron-builder",
    "build:electron": "tsc -p electron/tsconfig.json",
    "build:win": "npm run build -- --win",
    "build:mac": "npm run build -- --mac",
    "build:linux": "npm run build -- --linux",
    "generate-icons": "node scripts/generate-icons.js",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test:e2e": "npm run build:electron && playwright test",
    "test:e2e:headed": "npm run build:electron && playwright test --headed",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@xterm/addon-fit": "^0.11.0",
    "@xterm/addon-ligatures": "^0.10.0",
    "@xterm/addon-search": "^0.16.0",
    "@xterm/addon-web-links": "^0.12.0",
    "@xterm/addon-webgl": "^0.19.0",
    "@xterm/xterm": "^6.0.0",
    "electron-log": "^5.4.3",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.7.3",
    "node-pty": "^1.0.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "uuid": "^9.0.1",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@trodi/electron-splashscreen": "^1.0.2",
    "@types/node": "^20.10.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "@types/uuid": "^9.0.7",
    "@vitejs/plugin-react": "^4.2.0",
    "concurrently": "^8.2.2",
    "electron": "^28.3.3",
    "electron-builder": "^24.9.1",
    "jsdom": "^27.4.0",
    "playwright": "^1.57.0",
    "png-to-ico": "^3.0.1",
    "sharp": "^0.34.5",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vitest": "^4.0.16",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.voidterm.app",
    "productName": "VoidTerm",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*"
    ],
    "publish": {
      "provider": "github",
      "owner": "bqrayvzdgn",
      "repo": "VoidTerm"
    },
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "assets/icons/icon.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "assets/icons/icon.png"
    },
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "assets/icons"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  }
}
